{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "paths": {
      "docs-ui": ["./src/index.ts"],
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo-client",
    "noEmit": false,
    "jsx": "react",
    "lib": ["dom", "es2022"],
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "tailwind.config.js", "postcss.config.js"]
}
